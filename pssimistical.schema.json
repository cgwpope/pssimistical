{
    "id": "TODO",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for Pssimistical config",
    "type": "object",
    "required": [
        "tables",
        "inputs"
    ],
    "properties": {
        "tables": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "columns"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "pattern": "\\w+"
                    },
                    "columns": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "required": [
                                "name",
                                "type"
                            ],
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "pattern": "\\w+"
                                },
                                "type": {
                                    "enum": [
                                        "number",
                                        "text",
                                        "date"
                                    ]
                                },
                                "index": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        },
        "inputs": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "path",
                    "table",
                    "reader"
                ],
                "properties": {
                    "path": {
                        "type": "string"
                    },
                    "table": {
                        "type": "string"
                    },
                    "reader": {
                        "type": "string"
                    }
                }
            }
        }
    }
}